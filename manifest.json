{
  "name": "__MSG_appName__",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "assets/images/icon-16.png",
    "128": "assets/images/icon-128.png"
  },
  "default_locale": "en",
  "options_page": "settings/index.html",
  "background": {
    "scripts": [
      "background/index.js"
    ]
  },
  "browser_action": {
    "name": "LinkedInExt",
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "content-linkedin/index.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://github.com/search?q=*"
      ],
      "js": [
        "content-github-search/index.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "content-github/index.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "http://*/*",
    "https://*/*"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google.com; object-src 'self'"
}
